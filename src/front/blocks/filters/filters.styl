.filters
	font-size 0.8rem
	line-height 0.8rem

	&__wrapper
		display flex
		flex-direction column
		align-items center
		margin 0 0 20px 0
		padding 0

		&:last-child
			width 100%
			margin 0

	&__links
		display flex
		justify-content flex-end
		width 100%

		& .link
			width 14px
			height 14px

	&__label
		margin 0 0 10px 0
		font inherit
		font-weight bold
		text-transform uppercase
		cursor pointer

	&:last-child
		margin 0

	& select,
	& input[id="search-value-input"],
	& input[type="text"]
		box-sizing border-box
		height 32px
		padding 5px
		width 80%
		border 1px solid transparent
		font inherit
		text-align center
		outline none

	& select:hover,
	& input[id="search-value-input"]:hover,
	& input[type="text"]:hover 
		cursor pointer
		border-color color__brand

	& select:focus,
	& input[id="search-value-input"]:focus,
	& input[type="text"]:focus
		border-color color__blue

@media(min-width: width__desktop)
	.filters
		display flex
		flex-wrap wrap
		justify-content space-between
		font-size 1rem
		line-height 1rem

		&__wrapper
			margin 0 0 30px 0
			width 33%

		& select,
		& input[id="search-value-input"]
			text-align-last center

		&__label
			margin 0 0 20px 0
	
	.page--accounts .filters__wrapper,
	.page--computers .filters .filters__wrapper
		width 50%

	.page--phones .filters .filters__wrapper
		width 100%