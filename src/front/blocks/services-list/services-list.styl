.services-list
	padding 0 0 0 18px
	margin 0

	& li
		position relative
		margin 0 0 8px 0

	& li::before,
	& li::after
		position: absolute
		left -18px
		content ""
		width 6px
		height 1px
		background-color color__brand

	& li::before
		top 36%
		transform rotate(45deg)

	& li::after
		bottom 36%
		transform rotate(-45deg)

	& li:last-child
		margin 0